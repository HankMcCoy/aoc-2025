{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "ESNext.Collection"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "util/*": ["util/*"],
      "src/*": ["src/*"]
    }
  },
  "include": ["src", "util"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
